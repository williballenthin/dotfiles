[init]
    defaultBranch = main
[user]
    email = willi.ballenthin@gmail.com
    name = Willi Ballenthin
    signingkey = /Users/user/Library/Containers/com.maxgoedjen.Secretive.SecretAgent/Data/PublicKeys/97eaf6acd9a1a2ceae31b33216737a6a.pub
[core]
    fileMode = false
    pager = delta
[interactive]
    diffFilter = delta --color-only
[alias]
    branches = branch -a
    tags = tag
    stashes = stash list
    unstage = reset -q HEAD --
    discard = checkout --
    uncommit = reset --mixed HEAD~
    amend = commit --amend
    graph = log --graph -10 --branches --remotes --tags  --format=format:'%Cgreen%h %Cresetâ€¢ %<(75,trunc)%s (%cN, %cr) %Cred%d' --date-order
    precommit = diff --cached --diff-algorithm=minimal -w
    showtool = "!f() { git difftool $1^ $1; }; f"
    added = difftool --cached
[merge]
    conflictstyle = diff3
[diff]
    tool = delta
    colorMoved = default
[difftool]
    prompt = false
[pager]
    difftool = true
[gpg]
    format = ssh
#[commit]
#    gpgsign = true
[delta]
    navigate = true
    side-by-side = true
    line-numbers = true
    features = zebra-dark
[delta "zebra-dark"]
    minus-style = syntax "#330f0f"
    minus-emph-style = syntax "#4f1917"
    plus-style = syntax "#0e2f19"
    plus-emph-style = syntax "#174525"
    map-styles = \
       bold purple => syntax "#330f29", \
       bold blue => syntax "#271344", \
       bold cyan => syntax "#0d3531", \
       bold yellow => syntax "#222f14"
    zero-style = syntax
    whitespace-error-style = "#aaaaaa"
