#Set double buffering to eliminate flicker
double_buffer yes

#how often should conky update?
update_interval 1.0

#Setup conky window options
#argb allows transparency - 256 is opaque, 0 is transparent
own_window yes
own_window_argb_visual yes
#own_window_argb_value 255
own_window_transparent yes 
own_window_class Conky
own_window_type desktop


#set position
alignment top_right
gap_x 5
gap_y 5

#set window appearance
border_width 1
draw_borders no
stippled_borders 0
draw_graph_borders yno
minimum_size 254 900 
use_spacer none

#set text appearance
#shades and outlines can give a neon effect
#uppercase will set all text to uppercase
use_xft yes
xftfont liberation sans:size=10
default_color eeeeee
default_outline_color 0
default_shade_color black
draw_outline no
draw_shades yes
uppercase no
show_graph_scale no
show_graph_range no


#Additional settings
cpu_avg_samples 2
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no

#fork to background on start?
background no

TEXT
${alignc}${font liberation sans:size=10:weight=bold}
$sysname $kernel on $machine
$hr${font}
${color grey}Uptime:$color $uptime
${color grey}Clock Frequency:$color $freq MHz.

${color white}${font liberation sans:size=10:weight=bold}SYSTEM TIME $hr

${font liberation sans:size=20:weight=bold}${color white}${alignc}${time %X %Z}
$font${alignc}${time %A, %B %_d, %Y}

${color white}${font liberation sans:size=10:weight=bold}MEMORY $hr
${font}
${color grey}RAM Usage:$color $mem/$memmax - $memperc% 
${membar 4}
${color grey}Swap Usage:$color $swap/$swapmax - $swapperc% 
${swapbar 4}

${color white}${font liberation sans:size=10:weight=bold}CPU USAGE $hr
${font}
${color grey}Total:${alignr}$color $cpu% ${cpubar cpu0 4,170}
${cpugraph cpu1 20,268 0000ff 00ffff -t}
${cpugraph cpu2 20,268 00ff00 ffff88 -t}
${cpugraph cpu3 20,268 ff0000 ff88ff -t}
${cpugraph cpu4 20,268 ffff00 ff8888 -t}

${color grey}Processes:$color $processes  ${color grey}Running:$color $running_processes

${color white}${font liberation sans:size=10:weight=bold}FILE SYSTEMS $hr
${font}${color grey}
 Root: $color${fs_used /}/${fs_size /} 
 ${fs_bar 4 /}${color grey}
 Home: $color${fs_used /home}/${fs_size /home}
 ${fs_bar 4 /home/willi}${color grey}

${color white}${font liberation sans:size=10:weight=bold}NETWORK $hr
${font}
${if_existing /sys/class/net/wlan0/operstate up}WLAN0    ${addr wlan0}
${color grey}up:${color white} ${upspeed wlan0}  ${color grey}down:${color white} ${downspeed wlan0}
${upspeedgraph wlan0 20,268 ff00ff 00ffff -t -l}
${downspeedgraph wlan0 20,268 ffff00 ff0000 -t -l}
${endif}
${if_existing /sys/class/net/eth0/operstate up}ETH0    ${addr eth0}
${color grey}up:${color white} ${upspeed eth0}  ${color grey}down:${color white} ${downspeed eth0}
${upspeedgraph eth0 20,268 ff00ff 00ffff -t -l}
${downspeedgraph eth0 20,268 ffff00 ff0000 -t -l}
${endif}

${if_existing /sys/class/power_supply/BAT0/status Discharging}
${color white}${font liberation sans:size=10:weight=bold}BATTERY $hr
${font}	
 ${battery_bar BAT0 11,0} 
 ${battery_time BAT0}
${endif}
